{
  "name": "airdrops",
  "version": "1.0.0",
  "description": "Airdrops",
  "private": false,
  "keywords": [
    "solidity",
    "contract",
    "airdrop"
  ],
  "homepage": "https://github.com/thematters/airdrops#readme",
  "bugs": {
    "url": "https://github.com/thematters/airdrops/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thematters/airdrops.git"
  },
  "scripts": {
    "lint": "npm run format && npm run solhint",
    "format": "prettier --write 'contracts/**/*.sol'",
    "solhint": "solhint --config ./.solhint.json 'contracts/**/*.sol' --fix",
    "prepare": "husky install",
    "generate:merkle": "ts-node scripts/generate-merkle.ts"
  },
  "lint-staged": {
    "*.{ts,js,css,md,sol}": "npm run format",
    "*.sol": "npm run solhint"
  },
  "author": "Matters Lab",
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/node": "^17.0.23",
    "lint-staged": "^12.3.7",
    "prettier": "^2.6.1",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "^0.0.5",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "ethers": "^5.6.2",
    "husky": "^7.0.4",
    "keccak256": "^1.0.6",
    "merkletreejs": "^0.2.31",
    "winston": "^3.6.0"
  }
}
