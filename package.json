{
  "name": "the-space-airdrop",
  "version": "1.0.0",
  "description": "The Space Airdrop",
  "private": false,
  "keywords": [
    "solidity",
    "contract",
    "airdrop"
  ],
  "homepage": "https://github.com/thematters/the-space-airdrop#readme",
  "bugs": {
    "url": "https://github.com/thematters/the-space-airdrop/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thematters/the-space-airdrop.git"
  },
  "scripts": {
    "lint": "npm run format && npm run solhint",
    "lint:check": "npm run format:check && npm run solhint:check",
    "format": "prettier --write 'src/**/*.sol'",
    "format:check": "prettier --check 'src/**/*.sol'",
    "format:list": "prettier --list-different 'src/**/*.sol'",
    "solhint": "solhint --config ./.solhint.json 'src/**/*.sol' --fix",
    "solhint:check": "solhint --config ./.solhint.json 'src/**/*.sol'",
    "ganache": "ganache",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{ts,js,css,md,sol}": "npm run format",
    "*.sol": "solhint"
  },
  "author": "Matters Lab",
  "license": "Apache-2.0",
  "devDependencies": {
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "prettier": "^2.6.1",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "^0.0.5"
  }
}
